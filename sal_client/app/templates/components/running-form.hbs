<form id="running-form" role="form" {{action 'save' model on="submit" }}>
    {{message-component successMessages=successMessages errorMessages=errorMessages}}
    <div class="row running-toolbar" >
        <button type="button" class="btn btn-default" type="submit" disabled={{disabled}}>Speichern</button>
        {{#unless isNew}}
            <button type="button" class="btn btn-default" {{action 'edit'}} disabled={{editDisabled}}>Ändern</button>
        {{/unless}}
    </div>
    <div class="row">
        <fieldset>
            <div class="col-xs-12">
                <h4><i class="fa fa-calendar"></i> Datum</h4>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="form-group">
                    {{bootstrap-datepicker value=model.date class="form-control validate" name="date" format="dd.mm.yyyy" weekStart=1 disabled=disabled}}
                </div>
            </div>
        </fieldset>
    </div>
    <div class="row">
        <fieldset>
            <div class="col-xs-12">
                <h4><i class="fa fa-clock-o"></i> Zeiten</h4>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4">
                <div class="form-group">
                    <label for="startTime"> Zeit Start [hh:mm:ss]</label>
                    {{input type="text"  value=model.startTime class="form-control validate" name="startTime" disabled=disabled}}
                </div>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4">
                <div class="form-group">
                    <label for="totalTime">Zeit gesamt [hh:mm:ss]:</label>
                    {{input type="text"  value=model.totalTime class="form-control validate" name="totalTime" disabled=disabled}}
                </div>
            </div>
        </fieldset>
    </div>
    <!-- ./row -->
    <div class="row">
        <div class="col-xs-12">
            <h4><i class="fa fa-heartbeat"></i> Herzfrequenz</h4>
        </div>
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-12 col-sm-4 col-md-4">
                    <div class="form-group">
                        <label for="avgHeartRate">Durchschnitt. Herzfrequenz:</label>
                        {{input type="text" value=model.avgHeartRate class="form-control validate" name="avgHeartRate" disabled=disabled}}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-md-4">
                    <div class="form-group">
                        <label for="maxHeartRate"> Maximale Herzfrequenz:</label>
                        {{input type="text"  value=model.maxHeartRate class="form-control validate" name="maxHeartRate" disabled=disabled}}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-md-4">
                    <div class="form-group">
                        <label for="calories"> Kalorien [kCal]:</label>
                        {{input type="text"  value=model.calories class="form-control validate" name="calories" disabled=disabled}}
                    </div>
                </div>
            </div><!-- ./row -->
            <div class="row">
                <div class="col-xs-12 col-sm-4 col-md-4">
                    <div class="form-group">
                        <label for="timeInHeartRateZone">In HF Zone [hh:mm:ss]:</label>
                        {{input type="text" value=model.timeInHeartRateZone class="form-control validate" name="timeInHeartRateZone" disabled=disabled}}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-md-4">
                    <div class="form-group">
                        <label for="percentInHeartRateZone"> In HF Zone [%]:</label>
                        {{input type="text"  value=model.percentInHeartRateZone class="form-control validate" name="percentInHeartRateZone" disabled=disabled}}
                    </div>
                </div>
            </div><!-- ./row -->
        </div><!-- ./col-xs-12 -->
    </div><!-- ./row -->
    <div class="row">
        {{weather-form data=model isDisabled=disabled}}
    </div><!-- ./row -->
    <div class="row">
        <div class="col-xs-12">
            {{#if model.createdBy}}
                <p class="cycling-createdBy">
                    <span>Erstellt am </span>{{format-datetime model.createdAt}} <span> von </span> {{model.createdBy.username}}.
                </p>
            {{/if}}
            {{#if model.modifiedBy}}
                <p class="cycling-modifiedBy">
                    <span>Zuletzt geändert am </span>{{format-datetime model.modifiedAt}} <span> von </span> {{model.modifiedBy.username}}.
                </p>
            {{/if}}
        </div>
    </div><!-- ./row -->
</form>