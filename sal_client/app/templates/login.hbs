<div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <form role="form" {{action 'login' on="submit"}}>
                        <fieldset>
                            <div class="form-group">
                                {{input type="text" value=username class="form-control" id="username" placeholder="Benutzername"}}
                            </div>
                            <div class="form-group">
                                {{input type="password"  value=password class="form-control" id="password" placeholder="Password"}}
                            </div>
                            {{#if errorMessage}}
                                <p class="text-danger">{{errorMessage}}</p>
                            {{/if}}
                            <div class="form-group">
                                <button type="submit" class="btn btn-default pull-right">Anmelden</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>